{{#partial "titulo"}}
<h1 align = "center">Terminal | Resultados de la busqueda</h1>
{{/partial}}
{{#partial "resultados"}}
<div class="row">
   <div class="col-md-6 col-md-offset-3">
      <table class="table table-bordered table-striped">
         <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th></th>
         </tr>
         {{#each pois}}
         <tr>
            <td>{{this.id}}</td>
            <td>{{this.nombre}}</td>
            <td>{{this.direccion.calle}}</td>
            <td class="col-sm-4">
               <center>
                  <button data-toggle="collapse" data-target=#{{this.id}} class="btn btn-primary">Ver mas</button>
               </center>
               <div id={{this.id}} class="collapse">
                  <b>Comuna:</b> {{this.comuna.numeroComuna}} </br>
                  <b>Palabras Clave:</b> {{this.palabraClave}}
               </div>
            </td>
         </tr>
         {{/each}}
      </table>
   </div>
</div>
{{/partial}}
{{>terminal/terminal.hbs}}



