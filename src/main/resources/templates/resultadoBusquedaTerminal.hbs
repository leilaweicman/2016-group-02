

<html>
   <head>
      <title>Terminal | Resultados de la busqueda</title>
      <link rel="stylesheet"  href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   </head>
   </head>
   <body>
      <nav class="navbar navbar-default">
         <h1 align = "center">Terminal | Resultados de la busqueda</h1>
      </nav>
      <br>
      <div class="row">
         <div class="col-md-6 col-md-offset-3">
            <table class="table table-striped">
               <tr>
                  <th>Id</th>
                  <th>Nombre</th>
                  <th>Direccion</th>
                  <th></th>
               </tr>
               {{#each pois}}
               <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.nombre}}</td>
                  <td>{{this.direccion.calle}}</td>
                  <td class="col-sm-4">
                     <button data-toggle="collapse" data-target=#{{this.id}} class="btn btn-danger">Ver mas</button>
                     <div id={{this.id}} class="collapse">
                        <b>Comuna:</b> {{this.comuna.numeroComuna}} </br>
                        <b>Palabras Clave:</b> {{this.palabraClave}}
                     </div>
                  </td>
               </tr>
               {{/each}}
            </table>
         </div>
      </div>
   </body>
</html>

