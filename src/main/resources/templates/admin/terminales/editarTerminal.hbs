{{#partial "titulo"}}
<h1 align = "center" >Editar terminal</h1>
{{/partial}}
{{#partial "editarTerminales"}}

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
				<form action="/admin/terminal" method="post">
				
				<input type="hidden" name="id" value="{{id}}">
				
				<div>
					<label for="nombre">Nombre</label>
					<input type="text" class="form-control" id="nombre" value="{{user.nombre}}" placeholder="{{terminal.nombre}}"/>
				</div>
				<br>
				<div>
					<label for="nombre">Numero de comuna</label>
					<input type="text" class="form-control" id="comuna" value="{{user.comuna.numeroComuna}}" placeholder"{{terminal.comuna.numeroComuna}}"/>
				</div>
				<br>
				<div id="acciones">
					<label>Acciones</label>
					
					{{#each accionesUsuario}}
						<div class="checkbox">
							<label><input type="checkbox" id="{{id}}" checked="checked" value="">{{nombre}}</label>
						</div>
					{{/each}}
					{{#each accionesDisponibles}}
						<div class="checkbox">
							<label><input type="checkbox" id="{{id}}" value="">{{nombre}}</label>
						</div>
					{{/each}}
				
				</div>
				
				
								
				<button type="submit" class="btn btn-primary">Guardar</button>
				<button href="/admin/terminal" class="btn btn-primary">cancelar</button>

			</form>	
		</div>
	</div>		
			
{{/partial}}
{{>admin.hbs}}
