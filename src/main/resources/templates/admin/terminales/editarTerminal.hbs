{{#partial "titulo"}}
<h1 align = "center" >Editar terminal</h1>
{{/partial}}
{{#partial "editarTerminales"}}

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
				<form action="/admin/terminal" method="post">
				
				<input type="hidden" name="id" value="{{id}}">
				
				<div class="row">
					<label for="nombre">Nombre</label>
					<input type="text" class="form-control" id="nombre" value="{{terminal.nombre}}" placeholder="{{terminal.nombre}}"/>
				</div>
				
				<div class="row">
					<label for="nombre">Numero de comuna</label>
					<input type="text" class="form-control" id="comuna" value="{{terminal.comuna.numeroComuna}}" placeholder"{{terminal.comuna.numeroComuna}}"/>
				</div>
				
				<div class="col-md-6 col-md-offset-3">
					<label>Acciones</label>
					
					<label><input type="checkbox" value="">opcion</label>
				</div>
				
				{{#each terminal.accionesBusqueda}}
					<div class="checkbox">
  						<label><input type="checkbox" value="">opcion</label>
					</div>
				{{/each}}
				
								
				<button type="submit" class="btn btn-primary">Guardar</button>
				<button href="/admin/terminal" class="btn btn-primary">cancelar</button>

			</form>	
		</div>
	</div>		
			
{{/partial}}
{{>admin.hbs}}
